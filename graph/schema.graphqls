type Task {
  _id: ID!
  title: String!
  completed: Boolean!
  completed_date: String!
  created_at: String!
  updated_at: String!
  user_id: ID!
}

type Query {
  tasks: [Task!]!
  task(_id: String): Task!
}

input NewTask {
  title: String!
}

input UpdateTask {
  _id: String!
  title: String!
  completed: Boolean!
}

type Mutation {
  createTask(input: NewTask!): Task!
  updateTask(input: UpdateTask!): Task!
  deleteTask(_id: String!): Task!
}
